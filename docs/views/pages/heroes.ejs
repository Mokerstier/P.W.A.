<%- include('../partials/head.ejs') %>

<body class="active">
    <%- include('../partials/header.ejs') %>
    <main class="hero-list">
        <ul>
            <% data.map(hero => { %>
            <li class="hero-card">
                <a href="<%= hero.id %>">
                    <img class="hero-img" src="https://api.opendota.com<%=hero.img%>"
                        alt="Img of <%= hero.localized_name %>">
                    <h3><%= hero.localized_name %></h3>
                    <p>Attack type: <%= hero.attack_type %></p>
                </a>
            </li>
            <% }) %>
        </ul>
    </main>

    <%- include('../partials/pageend.ejs') %>